        <div id="order" style="margin-top: 10vh; height: 80vh;">
            <h1 data-scroll data-scroll-speed="1">Book your tiffin </h1>
            <div id="innerdiv5" data-scroll data-scroll-speed="2.5">
                <h4 style="position: absolute; right:8%; bottom: 2%">* All feilds are Mandatory *</h4>
                <form action="/submitOrder" id="Response" method="post">
                    
                    <label for="fname">First name:</label>
                    <input type="text" id="fname"  name="fname" value="" placeholder="Enter your first name">
                    <label for="lname">Last name:</label>
                    <input type="text" id="lname" name="lname" value="" placeholder="Enter your last name"><br>
                    <label for="email">Email:</label>
                    <input type="text" id="email" name="email" value="" placeholder="Enter your email">
                    <label for="phone">Phone number:</label>
                    <input type="text" id="phone" name="phone" value="" placeholder="Enter your phone number"><br>
                    <label for="meal">Meal time: </label>
                    <input type="text" id="mtime" name="mtime" value="" placeholder="Enter your meal time">
                    <label for="meal">Meal Date: </label>
                    <input type="text" id="mdate" name="mdate" value="" placeholder="Enter your meal date"><br><br>
                    <label for="message">Address: </label><br>

                    <textarea id="message" name="address" rows="10" cols="80" placeholder="Enter your address to be delivered">
                    
                        </textarea><br>
                    
                    
                <button  id="Buy" type="submit" style="padding: 5px;">Proceed to Checkout</button>

