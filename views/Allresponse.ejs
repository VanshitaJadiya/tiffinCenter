<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoodForYou</title>
    <link rel="icon" href="favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/loco.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="../stylesheets/style.css">
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body,
        html {
            width: 100vw;
            overflow-x: hidden;
            font-family: 'Marcellus', serif;
            height: 100%;
        }

        #main {
            width: 100vw;
            height: 100%;
            column-count: 5;
            padding: 5%;
            


        }
        


        .cards {
            break-inside: avoid;
            width: 17vw;
            background-color: #FFD24C;
            margin-bottom: 3vh;
            padding: 2vw;
            border-radius: 1vw;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        #image {
            width: 6vw;
            height: 6vw;
            border-radius: 3vw;
            overflow: hidden;
            border: solid #4a3737;
            margin-top: 1vh;
            margin-bottom: 1vh;

        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        h1 {

            font-size: 1.5vw;
            color: #4a3737;
        }

        h3 {
            font-size: 1vw;
            text-align: left;
            color: #4a3737;
        }
        @media (max-width:1200px) {
            #main{
                column-count: 4;
            }
            
        }
        @media (max-width:1000px){
            .cards{
                width: 20vw;
            }
            #image{
                width: 7vw;
                height: 7vw;
                border-radius: 3.5vw;
            }
            h1{
                font-size: 2vw;
            }
            h3{
                font-size: 1.2vw;
            }
        }
        @media (max-width:800px) {
            #main{
                column-count: 3;
            }
            .cards{
                width: 25vw;
            }
            #image{
                width: 8vw;
                height: 8vw;
                border-radius: 4vw;
            }
            h1{
                font-size: 3vw;
            }
            h3{
                font-size: 1.8vw;
            }
        }
        @media (max-width:500px) {
           
            #image{
                width: 9vw;
                height: 9vw;
                border-radius: 4.5vw;
            }
            h1{
                font-size: 3.5vw;
            }
            h3{
                font-size: 2vw;
            }
        }
        @media (max-width:400px) {
            #main{
                column-count: 2;
                
            }
            .cards{
                width: 30vw;
            }
            h3{
                font-size: 2.5vw;
            }
            
        }
    </style>

</head>

<body>
    <div id="header">
        <div id="name"><i class="ri-home-heart-fill"></i> Food For You</div>
        <div id="links"><a href="/">Home<i class="ri-home-line"></i></a><a href="/about">About<i
                    class="ri-chat-2-line"></i></a><a href="/delivery">Delivery Details<i
                    class="ri-briefcase-5-line"></i></a><a href="/menu">Menu<i class="ri-menu-add-line"></i></a><a
                href="/contact">Book Tiffin<i class="ri-contacts-book-line"></i></a></div>
                <div id="linked"><i class="ri-align-justify"></i>
                    <div id="linkbox">
                        <a href="/" style="padding-top: 0vw;">Home<i class="ri-home-line"></i></a><a href="/about">About<i
                            class="ri-chat-2-line"></i></a><a href="/delivery">Delivery Details<i
                            class="ri-briefcase-5-line"></i></a><a href="/menu">Menu<i class="ri-menu-add-line"></i></a><a
                        href="/contact">Book Tiffin<i class="ri-contacts-book-line"></i></a>
                    </div>
                </div>
    </div>
    <div id="main" style="padding-top: 20vh;">
        <% alldata.forEach(function(element) { %>
            <div class="cards">
                <h1>
                    <%= element.username %>
                </h1>
                <div id="image"><img src="../images/uploads/<%=element.image %>" alt=""></div>
                <h3 style="padding: 2px; overflow: hidden;">
                    <%= element.response %>
                </h3>
            </div>
            <% }) %>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.1/ScrollTrigger.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.1/gsap.min.js"
        integrity="sha512-Mf/xUqfWvDIr+1B6zfnIDIiG7XHzyP/guXUWgV6PgaQoIFeXkJQR5XWh9fqAiCiRCpemabt3naV4jhDWVnuYDQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script src="../javascripts/script.js"></script>
    <script>
        var navopen=0;

function openNav(){
  document.querySelector("#linked>i").addEventListener("click",function(){
    if(navopen===0){
      document.querySelector("#linkbox").style.display="flex";
      navopen=1;
    }
    else if(navopen===1){
      document.querySelector("#linkbox").style.display="none";
      navopen=0;
    }
  })
}
openNav();
    </script>
</body>

</html>