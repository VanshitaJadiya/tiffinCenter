<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoodForYou</title>
    <link rel="icon" href="favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/loco.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="../stylesheets/style.css">
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: 'Marcellus', serif;
            color: #4a3737;
        }

        body,
        html {

            justify-content: center;
            font-family: 'Marcellus', serif;

        }



        .title {
            font-size: 4vw;
            text-decoration: underline;
            padding-bottom: 3vh;
        }

        #form1 {
            max-width: 70vw;
            /* width: 100%; */
            background: #fff;
            border: 0.2vw solid black;
            width:fit-content;
            height: 80vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 15vh;
            border-radius: 2%;
            font-size: 2vw;

        }

        #form1>div {
            display: flex;
            align-items: center;
            justify-content: center;
            /* text-shadow: 1px 1px 2px rgb(119, 119, 118); */
            margin: 2vh;
        }

        button {
            padding: 1vw;
            border-radius: 2%;
            outline: none;
            color: #fff;
            font-size: large;
            border: none;
            width: fit-content;
            background-color: #0f0e0e96;
        }

        input {
            padding: 2vw;
            margin-left: 1vw;
        }

        textarea {
            padding: 1vw;
            margin-left: 1vw;
        }

        @media (max-width:600px) {
            .title{
                font-size: 5vw;
            }
            div{
                font-size: 4vw;
            }
            #form1{
                padding: 0vw;
            }
            
        }
        @media (max-width:500px) {
            #form1{
                display: flex;
                flex-direction: column;
                width: 97vw;
                border: 0vw transparent;
            }
            div{
                margin: 0vw;
            }
        }
        @media (max-width:600px) {
            .title{
                font-size: 6vw;
            }
            div{
                font-size: 5vw;
            }
            
            
        }
    </style>
</head>

<body>
    <div id="header">
        <div id="name"><i class="ri-home-heart-fill"></i> Food For You</div>
        <div id="links"><a href="/">Home<i class="ri-home-line"></i></a><a href="/about">About<i
                    class="ri-chat-2-line"></i></a><a href="/delivery">Delivery Details<i
                    class="ri-briefcase-5-line"></i></a><a href="/menu">Menu<i class="ri-menu-add-line"></i></a><a
                href="/contact">Book Tiffin<i class="ri-contacts-book-line"></i></a></div>
                <div id="linked"><i class="ri-align-justify"></i>
                    <div id="linkbox">
                        <a href="/" style="padding-top: 0vw;">Home<i class="ri-home-line"></i></a><a href="/about">About<i
                            class="ri-chat-2-line"></i></a><a href="/delivery">Delivery Details<i
                            class="ri-briefcase-5-line"></i></a><a href="/menu">Menu<i class="ri-menu-add-line"></i></a><a
                        href="/contact">Book Tiffin<i class="ri-contacts-book-line"></i></a>
                    </div>
                </div>
    </div>
    <div id="main" style="display: flex;
    align-items: center;
    justify-content: center;">

        <form id="form1" action="/submitresponse" method="post" enctype="multipart/form-data">
            <div class="title"> Feedback Form </div>

            <div>Full Name : <input type="text" name="name" id="" > </div>
            <div>Your Response : <textarea name="response" id="" cols="30" rows="2"
                    ></textarea></div>

            <div>Add Your Image: <input id="open" type="file" name="image"></div>
            <button type="submit" style="margin-top: 30px;">Submit</button>
        </form>

    </div>
    <script src="../javascripts/script.js"></script>
    <script>
        var navopen=0;

function openNav(){
  document.querySelector("#linked>i").addEventListener("click",function(){
    if(navopen===0){
      document.querySelector("#linkbox").style.display="flex";
      navopen=1;
    }
    else if(navopen===1){
      document.querySelector("#linkbox").style.display="none";
      navopen=0;
    }
  })
}
openNav();
    </script>

</body>

</html>